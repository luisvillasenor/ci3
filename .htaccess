<IfModule mod_rewrite.c>
RewriteEngine On

RewriteBase /ci3/
# Si el proyecto esta en el Server Root debes poner solo la raiz /
# Si esta en un folder cual sea entonces debe ser: RewriteBase /folder_name/

# Condicion y Regla para SYSTEM
RewriteCond %{REQUEST_URI} ^system.*
RewriteRule ^(.*)$ /index.php?/$1 [L]

# Condicion y Regla para APPLICATION
RewriteCond %{REQUEST_URI} ^application.*
RewriteRule ^(.*)$ /index.php?/$1 [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
<IfModule !mod_rewrite.c>
ErrorDocument 404 /index.php
</IfModule>